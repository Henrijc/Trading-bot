# AI Crypto Trading Coach - Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# =================================================================
# CRITICAL: LUNO EXCHANGE API CREDENTIALS (REQUIRED)
# =================================================================
# Get these from: https://www.luno.com/wallet/security/api_keys
LUNO_API_KEY=your_luno_api_key_here
LUNO_SECRET=your_luno_secret_key_here

# =================================================================
# GOOGLE GEMINI AI API (REQUIRED FOR AI FUNCTIONALITY)
# =================================================================
# Get API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Google Service Account for advanced features
GOOGLE_SERVICE_ACCOUNT_PATH=/app/service-account.json

# =================================================================
# DATABASE CONFIGURATION (Pre-configured for Docker)
# =================================================================
MONGO_URL=mongodb://admin:crypto_coach_admin_2025@mongo:27017/crypto_trader_coach?authSource=admin
DB_NAME=crypto_trader_coach

# =================================================================
# SECURITY CONFIGURATION (CHANGE THESE!)
# =================================================================
# Generate a strong 64-character secret key
JWT_SECRET_KEY=your_64_character_jwt_secret_key_here_replace_this_immediately

# Your login credentials
ADMIN_USERNAME=your_username
ADMIN_PASSWORD=your_secure_password

# Encryption key for sensitive data (32 characters)
ENCRYPTION_KEY=your_32_character_encryption_key

# =================================================================
# 2FA CONFIGURATION (OPTIONAL - WILL BE GENERATED)
# =================================================================
# These will be automatically generated on first setup
ADMIN_TOTP_SECRET=
ADMIN_BACKUP_CODES=

# =================================================================
# TRADING CONFIGURATION
# =================================================================
# Your financial goals (in ZAR)
MONTHLY_TARGET=8000
WEEKLY_TARGET=2000

# =================================================================
# SECURITY LIMITS (IMPORTANT!)
# =================================================================
# Maximum amounts to prevent accidental large trades
MAX_TRADE_AMOUNT=50000
MAX_DAILY_TRADING_VOLUME=200000
MAX_PORTFOLIO_PERCENTAGE_PER_TRADE=20

# =================================================================
# RATE LIMITING
# =================================================================
MAX_REQUESTS_PER_MINUTE=60
MAX_TRADE_REQUESTS_PER_HOUR=10

# =================================================================
# LOGGING & MONITORING
# =================================================================
SECURITY_LOG_LEVEL=INFO
ENABLE_TRADE_LOGGING=true

# =================================================================
# DEVELOPMENT SETTINGS
# =================================================================
# Set to false in production
DEBUG=false
ENVIRONMENT=development