# AI Crypto Trading Bot Environment Variables
# Copy this file to .env and fill in your actual credentials

# Database Configuration
MONGO_PASSWORD=cryptobot_secure_pass_change_me
REDIS_PASSWORD=redis_secure_pass_change_me
DB_NAME=cryptobot_db

# Luno API Credentials (REQUIRED - Get from https://www.luno.com/wallet/security/api_keys)
LUNO_API_KEY=your_luno_api_key_here
LUNO_API_SECRET=your_luno_api_secret_here

# Binance API Credentials (Optional - for market data feed)
BINANCE_API_KEY=your_binance_api_key_optional
BINANCE_SECRET=your_binance_secret_optional

# Security Tokens
API_TOKEN=secure_token_123_change_me
JWT_SECRET=your_jwt_secret_key_change_me

# FreqTrade Configuration (JWT token only - no username/password needed)
FREQTRADE_JWT_SECRET=freqtrade_jwt_secret_key_change_in_production

# Trading Configuration
DAILY_TARGET_ZAR=1000
MAX_DAILY_RISK_PERCENT=2.0
MAX_OPEN_TRADES=5

# AI Configuration
ENABLE_AI_TRADING=true
AI_MODEL_RETRAIN_HOURS=24
CONFIDENCE_THRESHOLD=0.7

# Environment
ENVIRONMENT=production

# Optional Notification Settings
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
SLACK_WEBHOOK_URL=